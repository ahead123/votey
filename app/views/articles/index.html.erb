
<div class="header">
	<div class="container">
		<h1>Votey <small style="font-size: 20px;">Upvote your favorites! New articles to vote on added weekly!</small></h1>
	</div>
</div>

<div class="main">
      <div class="container">
        <ul class="articles">
          <% @articles.each do |a| %>
          <li >
             <%= link_to "", article_path(a), :class => "fa fa-caret-up", method: :put %>
             <span class="upvotes"> <%= a.upvotes %> </span>
             <a class="title" href="<%= a.url %>"><%= a.title %></a>
          </li>
          <% end %>

      </div>
</div>
